<controls:MetroWindow x:Class="BarProject.DesktopApplication.Desktop.Windows.PricesHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarProject.DesktopApplication.Desktop.Windows"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="PricesHistory" Height="300" Width="300">
    <Grid>
        <controls:MetroProgressBar IsIndeterminate="True" Visibility="Hidden" x:Name="Progress"/>
        <ContentControl>
            <DataGrid x:Name="Datagrid" AutoGenerateColumns="True"/>
        </ContentControl>
    </Grid>
</controls:MetroWindow>

