<controls:MetroWindow x:Class="BarProject.DesktopApplication.Remote.OrderCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarProject.DesktopApplication.Remote"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="OrderCodeWindow" Height="200" Width="630" 
        >
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label FontSize="50">Order ID</Label>
                <TextBox x:Name="TextBlock" FontSize="50" Width="300"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <controls:Tile Style="{StaticResource MediumTileStyle}" Width="250" Height="70" FontSize="50" Click="Ok_Click">OK</controls:Tile>
                <controls:Tile Style="{StaticResource MediumTileStyle}" Width="250" Height="70" FontSize="50" Click="Cancel_Click">CANCEL</controls:Tile>
            </StackPanel>
        </StackPanel>
    </Grid>
</controls:MetroWindow>
