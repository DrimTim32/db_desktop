<mah:MetroWindow x:Class="BarProject.DesktopApplication.Remote.MainRemoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarProject.DesktopApplication.Remote"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="MainRemoteWindow" WindowState="Maximized">
    <Window.Resources>
        <Style x:Key="LargeTileStyle" TargetType="mah:Tile">
            <Setter Property="Width" Value="300" />
            <Setter Property="Height" Value="125" />
            <Setter Property="TitleFontSize" Value="10" />
        </Style>

        <Style x:Key="SmallTileStyle" TargetType="mah:Tile">
            <Setter Property="Width" Value="147" />
            <Setter Property="Height" Value="125" />
            <Setter Property="TitleFontSize" Value="10" />
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <mah:Tile Title="Mail" Style="{StaticResource LargeTileStyle}" Content="TUTAJ OBRAZEK 1" Background="Teal" Margin="3"/>
            <mah:Tile Title="Desktop" Style="{StaticResource LargeTileStyle}" Content="TUTAJ OBRAZEK 2" Background="Aqua"/>
            <mah:Tile Title="Store" Style="{StaticResource SmallTileStyle}" Content="TUTAJ MALUTKI OBRAZEK 2" Background="Green" />
        </StackPanel>
    </Grid>
</mah:MetroWindow>
